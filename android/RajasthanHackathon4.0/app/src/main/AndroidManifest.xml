<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whitewalkers.digihos">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChatbotActivity"
            android:label="@string/title_activity_chat_bot"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whitewalkers.digihos.MainActivity" />
        </activity>
        <activity
            android:name=".MedicalRecordsActivity"
            android:label="@string/title_activity_medical_history"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whitewalkers.digihos.MainActivity" />
        </activity>
        <activity
            android:name=".PreviousRecordActivity"
            android:label="@string/title_activity_previous_records"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whitewalkers.digihos.MainActivity" />
        </activity>
        <activity
            android:name=".PreviousTestsActivity"
            android:label="@string/title_activity_previous_tests"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whitewalkers.digihos.MainActivity" />
        </activity>
        <activity
            android:name=".RemindersActivity"
            android:label="@string/title_activity_reminders"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whitewalkers.digihos.MainActivity" />
        </activity>
    </application>

</manifest>